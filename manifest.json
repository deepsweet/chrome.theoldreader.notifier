{
    "manifest_version": 2,
    "name": "The Old Reader Notifier",
    "version": "0.2",
    "description": "Displays the number of unread RSS items of The Old Reader",
    "icons": {
        "128": "icon_128x128.png"
    },
    "background": {
        "page": "button.html",
        "persistent": false
    },
    "browser_action": {
        "default_icon": {
            "19": "icon_19x19.png",
            "38": "icon_38x38.png"
        }
    },
    "permissions": [
        "http://theoldreader.com/feeds/counts.json",
        "alarms",
        "tabs"
    ]
}
